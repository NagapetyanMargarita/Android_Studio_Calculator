<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/math"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:gravity="end"
        android:textColor="@color/black"
        android:hint="@string/Enter"
        android:textSize="30sp"
        android:inputType="numberDecimal"
        />
    <TextView
        android:id="@+id/txtOper"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:gravity="end"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/txtVsp"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:gravity="end"
        android:textSize="25sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                style="@style/NumberButton"
                android:text="@string/btn1" />

            <Button
                android:id="@+id/btn2"
                style="@style/NumberButton"
                android:text="@string/btn2" />

            <Button
                android:id="@+id/btn3"
                style="@style/NumberButton"
                android:text="@string/btn3" />
            <Button
                style="@style/ActionButton"
                android:id="@+id/btnplus"
                android:text="@string/btnplus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                style="@style/NumberButton"
                android:id="@+id/btn4"
                android:text="@string/btn4"
                />
            <Button
                style="@style/NumberButton"
                android:id="@+id/btn5"
                android:text="@string/btn5"
                />
            <Button
                style="@style/NumberButton"
                android:id="@+id/btn6"
                android:text="@string/btn6"
                />
            <Button
                style="@style/ActionButton"
                android:id="@+id/btnrazn"
                android:text="@string/btnrazn"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                style="@style/NumberButton"
                android:id="@+id/btn7"
                android:text="@string/btn7"
                />
            <Button
                style="@style/NumberButton"
                android:id="@+id/btn8"
                android:text="@string/btn8"
                />
            <Button
                style="@style/NumberButton"
                android:id="@+id/btn9"
                android:text="@string/btn9"
                />
            <Button
                style="@style/ActionButton"
                android:id="@+id/btnproiz"
                android:text="@string/btnproizv"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                style="@style/ActionButton"
                android:id="@+id/btnac"
                android:text="@string/btnac"
                />
            <Button
                style="@style/NumberButton"
                android:id="@+id/btn0"
                android:text="@string/btn0"
                />
            <Button
                style="@style/ActionButton"
                android:id="@+id/btnpoint"
                android:text="@string/btnpoint"
                />
            <Button
                style="@style/ActionButton"
                android:id="@+id/btnravn"
                android:text="@string/btnravn"
                />
            <Button
                style="@style/ActionButton"
                android:id="@+id/btndel"
                android:text="@string/btndel"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>